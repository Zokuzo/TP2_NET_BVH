@model List<Gauniv.WebServer.Data.Game>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Liste des Jeux";
    string currentSort = ViewData["CurrentSort"] as string;
    string nameSort = currentSort == "name_asc" ? "name_desc" : "name_asc";
    string priceSort = currentSort == "price_asc" ? "price_desc" : "price_asc";
    var userPurchasedGames = ViewData["PurchasedGames"] as List<int> ?? new List<int>();
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<h1>Liste des Jeux</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Gérer les catégories</a>
    <a asp-controller="Games" asp-action="Index" class="btn btn-secondary">Gérer les jeux</a>

</p>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@nameSort">
                    Nom @(currentSort == "name_asc" ? "▲" : (currentSort == "name_desc" ? "▼" : ""))
                </a>
            </th>
            <th>Description</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@priceSort">
                    Prix @(currentSort == "price_asc" ? "▲" : (currentSort == "price_desc" ? "▼" : ""))
                </a>
            </th>
            <th>Catégories</th>
            <th>Acheter</th>
        </tr>
    </thead>
    <tbody>
        <div>@Model.Count</div>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Description</td>
                <td>@game.Price €</td>
                <td>
                    @if (game.Categories != null && game.Categories.Any())
                    {
                        @string.Join(", ", game.Categories.Select(c => c.Name))
                    }
                    else
                    {
                        <span>Aucune catégorie</span>
                    }
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (userPurchasedGames.Contains(game.Id))
                        {
                            <span>✅ Acheté</span>
                        }
                        else
                        {
                            <form asp-action="Purchase" asp-controller="Home" method="post">
                                <input type="hidden" name="gameId" value="@game.Id" />
                                <button type="submit" class="btn btn-success">Acheter</button>
                            </form>
                        }
                    }
                    else
                    {
                        <span>🔒 Connectez-vous pour acheter</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
